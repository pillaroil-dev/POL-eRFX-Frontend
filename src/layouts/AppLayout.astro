---
import "@/styles/global.css";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
  </head>
  <body
    class="flex dark:bg-gradient-to-r from-deep-blue to-darker-blue w-full mx-auto h-full border-0 border-purple-border no-scrollbar"
  >
    <main class="flex w-full h-full">
      <slot />
    </main>
  </body>