---
import FxLayout from "../../../../../layouts/FxLayout.astro";
import { HEADER_TOKEN, Headers } from "@/constants";
import { ManageFxBidComponent } from "../../../../../components/ui/react/manage-fx-bid-component";

const { bid } = Astro.params;
//@ts-ignore
const res = await fetch(
  `${process.env.API_ENDPOINT}/v1/fx/manage-fx-bid/?${new URLSearchParams({ bid }).toString()}`,
  { headers: Headers }
);
const result = await res?.json();
---

<FxLayout title=`Manage Fx Bid | ${result[0]?.fxBid?.fx?.title}`>
  <ManageFxBidComponent token={HEADER_TOKEN} data={result} client:load />
</FxLayout>
