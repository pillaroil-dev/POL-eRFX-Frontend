---
import "@/styles/global.css";
import { Button } from "../components/ui/react/button";
import Text from "../components/Text.astro";
---

<!doctype html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />
    <title>Page Not Found!</title>
    <link
      href="./assets/images/favicon.png"
      rel="shortcut icon"
      type="image/x-icon"
    />
  </head>
  <body class="w-full flex flex-col my-12">
    <div
      class="flex flex-col justify-center items-center align-middle self-center mx-auto"
    >
      <img
        class="justify-center items-center align-middle self-center mx-auto"
        src="/404.svg"
      />
      <span class="bg-primary rounded-lg -mt-12">
        <p class="!text-white text-3xl font-bold py-2 px-4">404 Error</p>
      </span>
      <br />
      <h3 class="!text-foreground text-center font-medium text-lg">
        You're lost in space
        <br /> The resource you're looking for does not exist.
      </h3>
      <br />
      <a href="/u">
        <Button variant={"default"} className="bg-primary" client:load>
          Return home
        </Button>
      </a>
    </div>
  </body>
</html>
