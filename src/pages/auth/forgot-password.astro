---
import { Button } from "../../components/ui/react/button";
import { Input } from "../../components/ui/react/input";
import AuthLayout from "../../layouts/AuthLayout.astro";
import Text from "../../components/Text.astro";
---

<AuthLayout title="Forgot Password | Pillar Bids">
  <div
    class="flex flex-col h-full justify-center self-center items-center align-middle"
    slot="auth-slot"
  >
    <form
      method="post"
      action="/api/auth/generate-password-reset-otp"
      class="flex flex-col w-full justify-center self-center items-center align-middle"
    >
      <h1 class="font-bold md:hidden flex justify-center my-12 text-3xl">
        POL eRFX.
      </h1>
      <Text type="h4" content="Forgot your password?" />
      <Text
        type="p"
        content="Enter your email to receive an OTP for password reset"
        className="muted text-[14px]"
      />
      <Input
        type="email"
        placeholder="Email"
        name="email"
        required
        className="flex h-9 rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:cursor-not-allowed disabled:opacity-50 md:w-2/3 my-4"
      />
      <Button className="w-2/3 bg-primary">Send OTP</Button>
    </form>
  </div>
</AuthLayout>
